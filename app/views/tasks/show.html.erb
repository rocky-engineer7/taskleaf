<h1>タスクの詳細</h1>

<nav class="nav justify-content-end">
  <%= link_to '一覧', tasks_path, class: 'nav-link' %>
</nav>

<table class="table table-hover">
  <tbody>
    <tr>
      <th><%= Task.human_attribute_name(:id) %></th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:name) %></th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:description) %></th>
      <td><%= Rinku.auto_link(simple_format(@task.description, {}, sanitize: false, wrapper_tag: "div"), :all, 'target="_blank"') %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:image) %></th>
      <td><%= image_tag(@task.image) if @task.image.attached? %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:updated_at) %></th>
      <td><%= @task.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary mr-3' %>
<%= link_to '削除', @task, data: { turbo_method: :delete, turbo_confirm: "タスク「#{@task.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
